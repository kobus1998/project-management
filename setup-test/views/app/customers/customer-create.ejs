<div style="flex: 1">

  <% include ../../partials/companySidebar %>

  <div>

    <div class="notification is-info">
      <h3 class="title is-3">create customer</h3>
    </div>

    <div class="form-content">
      <form class="" action="/customers/create/<%= company.id %>" method="post">

        <div class="field">
          <label for="name" class="label">customer name</label>
          <p class="control">
            <input type="text" name="name" class="input">
          </p>
        </div>

        <div class="field">
          <label for="companyName" class="label">company</label>
          <p class="control">
            <input type="text" name="companyName" class="input">
          </p>
        </div>

        <div class="field">
          <button type="submit" class="button is-info">create</button>
        </div>

      </form>
    </div>

  </div>
</div>
